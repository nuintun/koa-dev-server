{
  "name": "webpack-dev-service",
  "version": "0.12.0",
  "description": "A koa 2 middleware for webpack development and hot reloading.",
  "type": "module",
  "sideEffects": [
    "esm/client/main.js",
    "cjs/client/main.cjs"
  ],
  "main": "cjs/server/index.cjs",
  "module": "esm/server/index.js",
  "types": "types/server/index.d.ts",
  "exports": {
    ".": {
      "import": "./esm/server/index.js",
      "require": "./cjs/server/index.cjs",
      "types": "./types/server/index.d.ts"
    },
    "./client": {
      "import": "./esm/client/index.js",
      "require": "./cjs/client/index.cjs",
      "types": "./types/client/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./types/server/index.d.ts"
      ],
      "client": [
        "./types/client/index.d.ts"
      ]
    }
  },
  "files": [
    "cjs",
    "esm",
    "types"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuintun/webpack-dev-service.git"
  },
  "keywords": [
    "dev",
    "koa",
    "server",
    "webpack",
    "middleware"
  ],
  "author": {
    "name": "nuintun",
    "email": "nuintun@qq.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuintun/webpack-dev-service/issues"
  },
  "homepage": "https://github.com/nuintun/webpack-dev-service#readme",
  "scripts": {
    "lint": "tsc --noEmit",
    "clean": "node tools/clean.js",
    "prepublishOnly": "npm run build",
    "test": "cd tests && node webpack.js",
    "build:cjs": "rollup -c tools/rollup.cjs.js",
    "build:esm": "rollup -c tools/rollup.esm.js",
    "format": "prettier --write . --ignore-path .prettierignore",
    "build": "npm run clean && npm run build:main && npm run format",
    "build:main": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --declarationDir types && node tools/fix-types.js"
  },
  "dependencies": {
    "@nuintun/ansi": "^0.0.3",
    "@types/koa": "^2.15.0",
    "@types/ws": "^8.5.10",
    "destroy": "^1.2.0",
    "etag": "^1.8.1",
    "memfs": "^4.8.1",
    "range-parser": "^1.2.1",
    "schema-utils": "^4.2.0",
    "supports-color": "^9.4.0",
    "tslib": "^2.6.2",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-typescript": "^11.1.6",
    "@swc/core": "^1.4.13",
    "@swc/helpers": "^0.5.9",
    "@types/destroy": "^1.0.3",
    "@types/etag": "^1.8.3",
    "@types/koa-compose": "^3.2.8",
    "@types/node": "^20.12.7",
    "@types/range-parser": "^1.2.7",
    "@types/react": "^18.2.77",
    "@types/react-dom": "^18.2.25",
    "css-loader": "^7.1.1",
    "html-webpack-plugin": "^5.6.0",
    "koa": "^2.15.3",
    "koa-compress": "^5.1.1",
    "magic-string": "^0.30.9",
    "memfs": "^4.8.1",
    "mini-css-extract-plugin": "^2.8.1",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.14.2",
    "swc-loader": "^0.2.6",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0"
  },
  "peerDependencies": {
    "koa": ">=2.3.0",
    "webpack": ">=5.20.0"
  }
}

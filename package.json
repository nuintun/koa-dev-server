{
  "name": "koa-webpack-dev-service",
  "version": "0.5.0",
  "description": "A koa 2 middleware for webpack development and hot reloading.",
  "type": "module",
  "types": "index.d.ts",
  "main": "server/cjs/index.cjs",
  "module": "server/esm/index.js",
  "exports": {
    "./*": "./*",
    ".": {
      "types": "./index.d.ts",
      "import": "./server/esm/index.js",
      "require": "./server/cjs/index.cjs"
    }
  },
  "files": [
    "types",
    "server",
    "client",
    "index.d.ts",
    "client.d.ts",
    "global.d.ts"
  ],
  "scripts": {
    "lint": "tsc --noEmit",
    "clean": "node tools/clean.js",
    "prepublishOnly": "npm run build",
    "test": "cd tests && node webpack.js",
    "build:cjs": "rollup -c tools/rollup.cjs.js",
    "build:esm": "rollup -c tools/rollup.esm.js",
    "build": "npm run clean && npm run build:main && npm run format",
    "format": "prettier --write tools src server client tests types",
    "build:main": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --declarationDir types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuintun/koa-webpack-dev-service.git"
  },
  "keywords": [
    "dev",
    "koa",
    "server",
    "webpack",
    "middleware"
  ],
  "author": {
    "name": "nuintun",
    "email": "nuintun@qq.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuintun/koa-webpack-dev-service/issues"
  },
  "homepage": "https://github.com/nuintun/koa-webpack-dev-service#readme",
  "peerDependencies": {
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "@types/koa": "^2.13.4",
    "@types/ws": "^8.5.3",
    "ansi-regex": "^6.0.1",
    "bufferutil": "^4.0.6",
    "core-js": "^3.22.5",
    "koa-compose": "^4.1.0",
    "utf-8-validate": "^5.0.9",
    "webpack-dev-middleware": "^5.3.1",
    "ws": "^8.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/koa-compose": "^3.2.5",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "html-webpack-plugin": "^5.5.0",
    "koa": "^2.13.4",
    "memfs": "^3.4.1",
    "mini-css-extract-plugin": "^2.6.0",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.72.1",
    "style-loader": "^3.3.1",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1"
  }
}
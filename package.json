{
  "name": "koa-webpack-dev-service",
  "version": "0.9.18",
  "description": "A koa 2 middleware for webpack development and hot reloading.",
  "type": "module",
  "sideEffects": true,
  "types": "index.d.ts",
  "main": "server/cjs/index.cjs",
  "module": "server/esm/index.js",
  "exports": {
    "./*": "./*",
    ".": {
      "types": "./index.d.ts",
      "import": "./server/esm/index.js",
      "require": "./server/cjs/index.cjs"
    }
  },
  "files": [
    "types",
    "server",
    "client",
    "index.d.ts",
    "client.d.ts",
    "global.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuintun/koa-webpack-dev-service.git"
  },
  "keywords": [
    "dev",
    "koa",
    "server",
    "webpack",
    "middleware"
  ],
  "author": {
    "name": "nuintun",
    "email": "nuintun@qq.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuintun/koa-webpack-dev-service/issues"
  },
  "homepage": "https://github.com/nuintun/koa-webpack-dev-service#readme",
  "scripts": {
    "lint": "tsc --noEmit",
    "clean": "node tools/clean.js",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build",
    "test": "cd tests && node webpack.js",
    "build:cjs": "rollup -c tools/rollup.cjs.js",
    "build:esm": "rollup -c tools/rollup.esm.js",
    "build": "npm run clean && npm run build:main && npm run format",
    "build:main": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --declarationDir types"
  },
  "dependencies": {
    "@types/koa": "^2.13.6",
    "@types/ws": "^8.5.4",
    "koa-compose": "^4.1.0",
    "tslib": "^2.5.0",
    "webpack-dev-middleware": "^6.0.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.0",
    "@swc/core": "^1.3.52",
    "@swc/helpers": "^0.5.0",
    "@types/koa-compose": "^3.2.5",
    "@types/node": "^18.15.12",
    "css-loader": "^6.7.3",
    "html-webpack-plugin": "^5.5.1",
    "koa": "^2.14.2",
    "magic-string": "^0.30.0",
    "memfs": "^3.5.0",
    "mini-css-extract-plugin": "^2.7.5",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.20.6",
    "swc-loader": "^0.2.3",
    "typescript": "^5.0.4",
    "webpack": "^5.80.0"
  },
  "optionalDependencies": {
    "bufferutil": ">=4.0.0",
    "utf-8-validate": ">=5.0.0"
  },
  "peerDependencies": {
    "webpack": "^5.0.0"
  }
}

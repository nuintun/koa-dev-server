{
  "name": "webpack-dev-service",
  "version": "0.6.1",
  "description": "A koa 2 middleware for webpack development and hot reloading.",
  "type": "module",
  "sideEffects": [
    "client/esm/main.js",
    "client/cjs/main.cjs"
  ],
  "main": "server/cjs/index.cjs",
  "module": "server/esm/index.js",
  "types": "types/server/index.d.ts",
  "exports": {
    ".": {
      "import": "./server/esm/index.js",
      "require": "./server/cjs/index.cjs",
      "types": "./types/server/index.d.ts"
    },
    "./client": {
      "import": "./client/esm/main.js",
      "require": "./client/cjs/main.cjs",
      "types": "./types/client/main.d.ts"
    },
    "./client?*": {
      "import": "./client/esm/main.js?*",
      "require": "./client/cjs/main.cjs?*",
      "types": "./types/client/main.d.ts"
    },
    "./events": {
      "import": "./client/esm/index.js",
      "require": "./client/cjs/index.cjs",
      "types": "./types/client/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "client": [
        "./types/client/main.d.ts"
      ],
      "client?*": [
        "./types/client/main.d.ts"
      ],
      "events": [
        "./types/client/index.d.ts"
      ]
    }
  },
  "files": [
    "types",
    "server",
    "client",
    "index.d.ts",
    "client.d.ts",
    "global.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuintun/webpack-dev-service.git"
  },
  "keywords": [
    "dev",
    "koa",
    "server",
    "webpack",
    "middleware"
  ],
  "author": {
    "name": "nuintun",
    "email": "nuintun@qq.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuintun/webpack-dev-service/issues"
  },
  "homepage": "https://github.com/nuintun/webpack-dev-service#readme",
  "scripts": {
    "lint": "tsc --noEmit",
    "clean": "node tools/clean.js",
    "prepublishOnly": "npm run build",
    "test": "cd tests && node webpack.js",
    "build:cjs": "rollup -c tools/rollup.cjs.js",
    "build:esm": "rollup -c tools/rollup.esm.js",
    "format": "prettier --write . --ignore-path .prettierignore",
    "build": "npm run clean && npm run build:main && npm run format",
    "build:main": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --declarationDir types && node tools/fix-types.js"
  },
  "dependencies": {
    "@nuintun/ansi": "^0.0.3",
    "@types/koa": "^2.14.0",
    "@types/ws": "^8.5.10",
    "koa-compose": "^4.1.0",
    "tslib": "^2.6.2",
    "webpack-dev-middleware": "^7.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@swc/core": "^1.3.103",
    "@swc/helpers": "^0.5.3",
    "@types/koa-compose": "^3.2.8",
    "@types/node": "^20.11.4",
    "css-loader": "^6.9.0",
    "html-webpack-plugin": "^5.6.0",
    "koa": "^2.15.0",
    "magic-string": "^0.30.5",
    "memfs": "^4.6.0",
    "mini-css-extract-plugin": "^2.7.7",
    "prettier": "^3.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.5",
    "swc-loader": "^0.2.3",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0"
  },
  "peerDependencies": {
    "webpack": "^5.0.0"
  }
}
